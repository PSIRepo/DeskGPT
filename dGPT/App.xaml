            </Setter>
            <Setter Property="BorderBrush" Value="#FF2C3D53"></Setter>
            <Setter Property="BorderThickness" Value="0,1,0,0"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Margin" Value="0,0,0,0"></Setter>
